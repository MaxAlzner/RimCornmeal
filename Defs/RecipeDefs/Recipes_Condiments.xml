<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <RecipeDef Name="XM_CookBakeMealBase" Abstract="True">
    <fixedIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <thingDefs>
        <li>XM_Cornmeal</li>
      </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowPlantFood</li>
      </specialFiltersToDisallow>
    </fixedIngredientFilter>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <thingDefs>
        <li>XM_Cornmeal</li>
      </thingDefs>
      <disallowedCategories>
        <li>EggsFertilized</li>
      </disallowedCategories>
      <disallowedThingDefs>
        <li>Meat_Human</li>
        <li>Meat_Megaspider</li>
        <li>InsectJelly</li>
      </disallowedThingDefs>
    </defaultIngredientFilter>
    <workSkill>Cooking</workSkill>
  </RecipeDef>

  <RecipeDef>
    <defName>XM_MakeCornmeal</defName>
    <label>make cornmeal</label>
    <description>Make cornmeal, used in baking.\n\nUses the Cooking skill.</description>
    <jobString>Making cornmeal.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>200</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>20</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCorn</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <XM_Cornmeal>30</XM_Cornmeal>
    </products>
    <recipeUsers>
      <li>VCE_CondimentPrepTable</li>
    </recipeUsers>
    <researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
  </RecipeDef>

  <RecipeDef>
    <defName>XM_MakeCornmealBulk</defName>
    <label>make cornmeal x4</label>
    <description>Make bulk cornmeal, used in baking.\n\nUses the Cooking skill.</description>
    <jobString>Making cornmeal x4.</jobString>
    <workSpeedStat>CookSpeed</workSpeedStat>
    <effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>
    <workAmount>200</workAmount>
    <targetCountAdjustment>5</targetCountAdjustment>
    <workSkill>Cooking</workSkill>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawCorn</li>
          </thingDefs>
        </filter>
        <count>80</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <thingDefs>
        <li>RawCorn</li>
      </thingDefs>
    </fixedIngredientFilter>
    <products>
      <XM_Cornmeal>120</XM_Cornmeal>
    </products>
    <recipeUsers>
      <li>VCE_CondimentPrepTable</li>
    </recipeUsers>
    <researchPrerequisite>VCE_CondimentsResearch</researchPrerequisite>
  </RecipeDef>

</Defs>